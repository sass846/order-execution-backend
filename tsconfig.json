{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    // Interop is REQUIRED for Prisma + ESM
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Strictness
    "strict": true,
    "skipLibCheck": true,
    // Backend only â€” no JSX
    "jsx": "react-jsx",
    // Better TS experience, keeps ESM clean
    "verbatimModuleSyntax": true,
    // REQUIRED for ts-node when using ESM
    "isolatedModules": false,
    // Output helpful debugging data
    "sourceMap": true,
    "declaration": false,
    // Detect modules normally
    "moduleDetection": "auto",
    // Recommended backend settings
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src"
  ]
}