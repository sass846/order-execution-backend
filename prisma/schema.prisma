generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            String     @id @default(uuid())
  type          String     @default("MARKET")
  inputToken    String
  outputToken   String
  amount        Float
  status        String
  txHash        String?
  executedPrice Float?
  dex           String?
  error         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  logs          OrderLog[]
}

model OrderLog {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  status    String
  message   String
  timestamp DateTime @default(now())
}
